#include <Servo.h>

Servo myservo1;
int val;  // Move the declaration of val outside the setup function

void setup()
{
  myservo1.attach(3);
  // Remove the int val; from here
}

void loop()
{
  val = digitalRead(9);

  if (val)
  {
    myservo1.write(180);
  }
  else
  {
    myservo1.write(0);
  }

  delay(500);
}
