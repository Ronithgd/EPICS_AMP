#include <Servo.h>

Servo myservo1;
const int threshValue = 900;

void setup()
{
  myservo1.attach(3);
  Serial.begin(115200);
}

void loop()
{
  int sensorValue = analogRead(A3);

  Serial.println(sensorValue);

  if (sensorValue > threshValue)
  { 
    digitalWrite(3, HIGH); 
  }
  else 
  { 
    digitalWrite(3, LOW);
  } 

  delay(500);
}
